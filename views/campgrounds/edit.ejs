<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="post" class="needs-validation"
                enctype="multipart/form-data" novalidate>
                <div class="mb-3 mt-1">
                    <label class="form-lable " for="title">Campground Name</label>
                    <input class="form-control " type="text" name="campground[title]" id="title" required
                        value="<%=campground.title%>">
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3 mt-1">
                    <label class="form-lable " for="location">Location</label>
                    <input class="form-control " type="text" name="campground[location]" required id="location"
                        value="<%=campground.location%>">
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3 mt-1 custom-file">
                    <label for="formFileMultiple" class="form-label custom-file-label">Edit Images</label>
                    <input class="form-control custom-file-input" name="image" type="file" id="formFileMultiple"
                        multiple>
                </div>
                <div class="mb-3">
                    <label class="form-lable" for="price">Campground Price</lable>
                        <div class="input-group mb-3 input-group-sm">
                            <span class="input-group-text">$</span>
                            <input id="price" type="number" class="form-control"
                                aria-label="Amount (to the nearest dollar)" name="campground[price]" required
                                value="<%=campground.price%>">
                            <span class=" input-group-text">.00</span>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                </div>
                <div class="form-floating mb-3">
                    <div>
                        <label class="form-lable mb-0" for="description">Description</label>
                        <textarea class="form-control" placeholder="Describe Your Campground!"
                            name="campground[description]" required id="description"
                            style="height: 100px">"<%=campground.description%>"</textarea>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <% campground.images.forEach(function(img,i) { %>
                        <img src="<%=img.thumbnail%>" class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <input class="form-check-input" type="checkbox" name="deleteImages[]"
                                value="<%=img.filename%>" id="image-<%=i%>">
                            <label class="form-check-label" for="image-<%=i%>">
                                Delete image?
                            </label>
                        </div>
                        <% }) %>
                </div>
                <button class="btn btn-info btn-outline-light mt-2" type="submit" id="form">Update
                    Campground</button>
            </form>
            <a href="/campgrounds/<%=campground._id%>">Back to Campgrounds</a>
        </div>
    </div>
    <script>
        (function () {
            'use strict'

            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            var forms = document.querySelectorAll('.needs-validation')

            // Loop over them and prevent submission
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>