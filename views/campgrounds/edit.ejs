<% layout('layouts/boilerplate') %>
    <div class="row m-2">
        <div class="container d-flex justify-content-center align-items-center h-100">
            <div class="col-md-6 card shadow bg-light text-dark p-1">
                <h3 class=" text-center d-flex justify-content-center card-title m-1">Edit Campground</h3>
                <div class="p-1">
                    <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="post" class="needs-validation"
                        enctype="multipart/form-data" novalidate>
                        <div class="mb-3 mt-1">
                            <label class="form-lable d-flex justify-content-center fw-bold mb-1 " for="title">Campground
                                Name</label>
                            <input class="form-control " type="text" name="campground[title]" id="title" required
                                value="<%=campground.title%>">
                            <div class="valid-feedback  fw-bolder">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3 mt-1">
                            <label class="form-lable d-flex justify-content-center fw-bold mb-1 "
                                for="location">Location</label>
                            <input class="form-control " type="text" name="campground[location]" required id="location"
                                value="<%=campground.location%>">
                            <div class="valid-feedback  fw-bolder">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3 mt-1 custom-file">
                            <label for="formFileMultiple"
                                class="form-label custom-file-label d-flex justify-content-center fw-bold mb-1">Edit
                                Images</label>
                            <input class="form-control custom-file-input" name="image" type="file" id="formFileMultiple"
                                multiple>
                        </div>
                        <div class="mb-3">
                            <div>
                                <label class="form-lable d-flex justify-content-center fw-bold mb-1"
                                    for="price">Campground
                                    Price
                                    </lable>
                            </div>

                            <div class="input-group mb-3 input-group-sm">
                                <span class="input-group-text">$</span>
                                <input id="price" type="number" class="form-control"
                                    aria-label="Amount (to the nearest dollar)" name="campground[price]" required
                                    value="<%=campground.price%>">
                                <span class=" input-group-text">.00</span>
                                <div class="valid-feedback  fw-bolder">
                                    Looks good!
                                </div>
                            </div>
                        </div>
                        <div class="form-floating mb-3">
                            <div>
                                <label class="form-lable d-flex justify-content-center fw-bold mb-1"
                                    for="description">Description</label>
                                <textarea class="form-control" placeholder="Describe Your Campground!"
                                    name="campground[description]" required id="description"
                                    style="height: 100px">"<%=campground.description%>"</textarea>
                                <div class="valid-feedback  fw-bolder">
                                    Looks good!
                                </div>
                            </div>
                        </div>
                        <div class="m-2 d-flex justify-content-center align-items-center">
                            <% campground.images.forEach(function(img,i) { %>
                                <div class="container m-0 p-0 ">
                                    <div class="row m-0 p-0">
                                        <div class="col-md-12 offset-6 d-flex justify-content-center p-0 m-0 ">
                                            <div class="card border-dark m-2  " style="max-width: 18rem;">
                                                <img src="<%=img.thumbnail%>" class="img-thumbnail rounded img-fluid"
                                                    alt="">
                                                <div
                                                    class="form-lable d-flex justify-content-center align-items-center ">
                                                    <div class="card-header p-1">
                                                        <input class="form-check-input " type="checkbox"
                                                            name="deleteImages[]" value="<%=img.filename%>"
                                                            id="image-<%=i%>">
                                                        <label class="form-check-label btn-sm btn-danger"
                                                            for="image-<%=i%>">
                                                            <i class="fa-regular fa-trash-can m-1 "></i>
                                                            Delete
                                                            image?
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <% }) %>
                                </div>

                        </div>
                        <div class="d-flex -flex justify-content-center align-items-center">
                            <button class="btn btn-secondary btn-outline-dark" type="submit" id="form">Update
                                Campground</button>
                        </div>
                    </form>
                    <a class="btn btn-primary mt-3 d-flex justify-content-center align-items-center"
                        href="/campgrounds/<%=campground._id%>">Back to Campgrounds</a>
                </div>
            </div>
        </div>
    </div>
    <script>
        (function () {
            'use strict'

            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            var forms = document.querySelectorAll('.needs-validation')

            // Loop over them and prevent submission
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>