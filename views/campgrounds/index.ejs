<% layout('layouts/boilerplate') %>
    <script>   const mapToken = '<%-process.env.MAPBOX_TOKEN%>'
    </script>
    <div id="map" style="width: 100%; height: 500px;" class="mt-2"></div>
    <div class="d-flex justify-content-center align-items-center fs-3 text-light mt-4 fw-bold">
        <p><u>Explore Campgrounds</u> </p>
    </div>
    <% for(let campground of campgrounds) { %>
        <div class=" card mb-3 text-white bg-dark p-2">
            <div class="row">
                <div class="col-md-4">
                    <img src="<%=campground.images[0].url%>" alt="" class="img-fluid">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h3 class="card-title fs-1">
                            <%=campground.title%>
                        </h3>

                        <p class="card-text fs-5 mt-4">
                            <%= campground.description %>
                        </p>
                        <p class="card-text fs-4 mt-3">
                            <small class="text-muted"><i class="fa-solid fa-location-dot"></i>
                                <%= campground.location%>
                            </small>
                        </p>
                        <a href="/campgrounds/<%=campground._id %>"
                            class="btn btn-primary fs-5 mt-5 bg-light text-body">
                            Check Details
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
            <script>
                const Campground = '{"type": "FeatureCollection","features": <%-JSON.stringify(campgrounds)%>}'
            </script>
            <script src="/javascript/clusterMap.js"></script>